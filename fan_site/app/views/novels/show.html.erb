<div class="col-md-10 col-md-offset-1">
  <div class="novel-header">
     <%= @novel.title %>
  </div>
  <center>
  <div class= "novel-details">
    <li><strong> Author:</strong>  <%= @novel.author %>
       <strong> Likes:</strong>  <%=@novel.rating%></li>
  </div>
  </center>
  <hr>
  <div class= "novel-description">
  <li><strong>Description:</strong> <%=@novel.description %></li>
  </div>
  <br>
  <br>
  <center>
  <li><p><%= link_to "Edit", edit_novel_path(@novel), class:"btn btn-default" %>
         <%= link_to "Delete", novel_path(@novel),
                              :data => {:confirm =>"You sure?",
                              :method => "delete"}, class:"btn btn-default" %>
        <%= link_to "Review", new_novel_review_path(@novel), class:"btn btn-danger" %></p></li>

  </center>
  <br>
  <br>
  <% if @novel.reviews.any? %>
    <div class = "review-title">
    <p> Reviews </p>
    <br>
    </div>
    <ul>
      <% @novel.reviews.each do |review| %>
        <div class= "review-display">
          <li><strong><%= review.user_name %></strong>, <%= review.created_at %></li>
          <li> <%= review.description %> </li>
        </div>
        <%= link_to "Delete", novel_review_path(@novel, review),
                                :data => {:confirm => "Are you sure?",
                                :method => "delete"}, class:"btn btn-danger" %>
        <br>
      <% end %>
    </ul>
  <% end %>
</div>
