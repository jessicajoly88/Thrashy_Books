<%= render "layouts/errors", :object => @novel %>

<center>
<%= form_for @novel do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="form-group">
    <%= f.label :author %>
    <%= f.text_field :author %>
  </div>
  <div class="form-group">
    <%= f.label :description%>
    <br>
    <%= f.text_area :description, cols: "80", rows: "10"%>
  </div>
    <%= f.submit %>
  <% end %>
</center>
