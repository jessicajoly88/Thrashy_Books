<%= render('layouts/errors', :object => @review) %>


<%= form_for [@novel, @review] do |f| %>
<div class = "container">
  <div class="form-group">
    <%=  f.label :Name %>
    <%=  f.text_field  :user_name %>
  </div>
  <div class="form-group">
    <%=  f.label :review %>
    <br>
    <%=  f.text_area :description, cols: "80", rows: "10" %>
  </div>
  <p><%= f.submit %></p>
  <% end %>
</div>
